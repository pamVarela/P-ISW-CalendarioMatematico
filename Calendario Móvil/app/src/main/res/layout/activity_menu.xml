<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#c82c8870"
    android:layout_height="match_parent"
    tools:context=".menu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="417dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:alpha="0.5"
        android:background="@drawable/fondo"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto"
        android:text="Nombre usuario"
        android:textColor="#FAFAFA"
        android:textSize="16sp"
        android:typeface="normal" />

    <ImageButton
        android:id="@+id/cursos"
        android:layout_width="118dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="164dp"
        android:background="#002c8870"
        app:srcCompat="@drawable/hat" />

    <ImageButton
        android:id="@+id/notificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cursos"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/foto"
        android:background="#002c8870"
        app:srcCompat="@drawable/bell" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cursos"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto"
        android:text="CURSOS"
        android:textColor="#FAFAFA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginStart="-30dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/nombreUsuario"
        android:fontFamily="@font/roboto"
        android:text="NOTIFICACIONES"
        android:textColor="#FAFAFA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <ImageButton
        android:id="@+id/about"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cursos"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="114dp"
        android:background="#002c8870"
        app:srcCompat="@drawable/about" />

    <ImageButton
        android:id="@+id/salida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/notificacion"
        android:layout_alignTop="@+id/about"
        android:background="#002c8870"
        app:srcCompat="@drawable/logout" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="-93dp"
        android:fontFamily="@font/roboto"
        android:text="ACERCA DE LA APP"
        android:textColor="#fafafa"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="68dp"
        android:fontFamily="@font/roboto"
        android:text="SALIR"
        android:textColor="#FAFAFA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal" />


</RelativeLayout>