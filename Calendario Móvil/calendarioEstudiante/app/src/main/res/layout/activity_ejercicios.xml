<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="Cards">

    <android.support.v7.widget.CardView
        android:id="@+id/idCardView"
        android:layout_width="330dp"
        android:layout_height="390dp"
        android:layout_margin="15dp"
        android:backgroundTint="#DCDCDC"
        app:cardCornerRadius="3dp">


        <com.example.admin.calendarioestudiante.widget.noPresionarBotonPadre
            android:id="@+id/editarEjercicio"
            android:layout_width="70dp"
            android:layout_height="71dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="310dp"
            android:background="@color/transparente"
            app:srcCompat="@drawable/ic_action_edit" />

        <com.example.admin.calendarioestudiante.widget.noPresionarBotonPadre
            android:id="@+id/borrarEjercicio"
            android:layout_width="70dp"
            android:layout_height="71dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="310dp"
            android:background="@color/transparente"
            app:srcCompat="@drawable/ic_action_delete" />

        <TextView
            android:id="@+id/nombreE"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:text="Nombre del ejercicio"
            android:textAlignment="center"
            android:textColor="#2C8870"
            android:textSize="16sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/fechaE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="270dp"
            android:fontFamily="@font/roboto"
            android:text="Fecha : "
            android:textAlignment="textStart"
            android:textColor="#2C8870"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fechaEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="270dp"
            android:fontFamily="@font/roboto"
            android:text="Fecha del ejercicio"
            android:textColor="#2C8870"
            android:textSize="16sp"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/problema"
            android:layout_width="147dp"
            android:layout_height="143dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="85dp"
            app:srcCompat="@drawable/images" />

        <ImageView
            android:id="@+id/planteo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="210dp"
            android:scaleType = "fitXY"
            android:layout_marginTop="65dp"
            app:srcCompat="@drawable/images" />

        <ImageView
            android:id="@+id/solucion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="210dp"
            android:scaleType = "fitXY"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/images" />

    </android.support.v7.widget.CardView>

</LinearLayout>